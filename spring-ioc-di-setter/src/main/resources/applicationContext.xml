    <bean id="userDao" class="xyz.leeyangy.dao.impl.UserDaoImpl"/>

    <bean id="bookService" class="xyz.leeyangy.service.impl.BookServiceImpl">
        <property name="bookDao" ref="bookDao"/>
        <property name="userDao" ref="userDao"/>
    </bean>
